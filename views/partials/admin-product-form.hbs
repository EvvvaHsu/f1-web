<div class="form-row mb-3">
  <label class="form-label" for="name">Name</label>
  <input class="form-control" minlength="1" maxlength="100" type="text" name="name" id="name" placeholder="Enter name" value="{{product.name}}"
    required>
</div>

<div class="form-row mb-3">
  <label class="form-label" for="amount">Amount</label>
  <input class="form-control" minlength="1" maxlength="10000000" type="text" name="amount" id="amount" placeholder="Enter price" value="{{product.amount}}"
    required>
</div>

<div class="form-row mb-3">
  <label class="form-label" for="amount">Stock</label>
  <input class="form-control" minlength="1" maxlength="10000000" type="text" name="stock" id="stock" placeholder="Enter stock" value="{{product.stock}}"
    required>
</div>

<div class="form-row mb-3">
  <label class="form-label" for="size">Size</label>
  <select class="form-control" id="size" name="size" required>
    <option value="Size" disabled selected>Size</option>
    <option value="L">L</option>
    <option value="M">M</option>
    <option value="S">S</option>
  </select>
</div>

