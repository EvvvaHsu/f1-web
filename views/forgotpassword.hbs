<div class="border">
  <div class="mb-4 text-center">
    <h1 class="h3 font-weight-normal mb-3">Forgot Password</h1>
  </div>
  <div class="d-flex justify-content-between mb-5">
    <span>We will send an email with instruction to reset your password.</span>
  </div>

  <form class="form-signin" action="/forgotpassword" method="POST">
    <div class="form-row mb-5">
      <label class="form-label" for="email">Email</label>
      <input class="form-control" id="email" type="email" name="email" class="form-control" placeholder="Email"
        maxlength="40" required autofocus>
    </div>

    <div class="mb-4 text-center">
      <button class="btn btn-light" type="submit">Sent</button>
    </div>

    <div class="mb-4 text-center">
      <a class="btn btn-light" href="/signin">Back to Log In</a>
    </div>

  </form>
</div>