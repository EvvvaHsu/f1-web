<div class="border">
  <div class="mb-4 text-center">
    <h1 class="h3 font-weight-normal mb-3">Reset Password</h1>
  </div>
  <div class="d-flex justify-content-between mb-5">
    <span>Please reset your password for email : {{email}}</span>
  </div>

  <form class="form-signin" action="" method="POST">
    <div class="form-row mb-5">
      <label class="form-label" for="passhash">Password</label>
      <input class="form-control" id="passhash" type="password" name="passhash" class="form-control"
        placeholder="New Password" maxlength="40" required autofocus>
      <br>
      <label class="form-label" for="passhashCheck">Confirm Password</label>
      <input class="form-control" id="passhashCheck" type="password" name="passhashCheck" class="form-control"
        placeholder="Confirm Password" maxlength="40" required>
    </div>

    <div class="mb-4 text-center">
      <button class="btn btn-light" type="submit">Sent</button>
    </div>

    <div class="mb-4 text-center">
      <a class="btn btn-light" href="/signin">Back to Log In</a>
    </div>

  </form>
</div>