{{> admin-tabs route='category'}}

<table class="table align-middle" id="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Category Name</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each categories}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>
        <a class="btn btn-edit text-decoration-none" href="/admin/categories/{{this.id}}">
          Edit
        </a>
        <form action="/admin/categories/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-delete text-decoration-none">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
